<div class="indexBox">
  <div class="logoDiv">
    <h1>PETSITTR</h1>
    <img
      id="logoImg"
      src="/images/logo.png"
      alt="log CatDog"
    />
    <h3>Happy pets, peacefull owners</h3>

  </div>

  <div class="loginSingUpBox">

    <div class="loginBox">

      <h3>Login form</h3>

      <form action="/" method="post">
        <div class="mb-3">
          <label class="form-label" for="email">Email</label>
          <input class="form-control" type="email" name="email" />
        </div>


        <div class="mb-3">
          <label class="form-label" for="password">Password</label>
          <input class="form-control" type="password" name="password" />
        </div>




        <div class="mb-3 form-check">
          <label class="form-check-label" for="RemeberMe">Remeber Me</label>
          <input class="form-check-input" type="checkbox" name="RemeberMe"
            value="true" checked />

        </div>


        <button id="loginButton" class="btn btn-primary">Login</button>

        {{#if this.errorMessage}}
          <div class="alert alert-danger" role="alert">
           {{this.errorMessage}}
          </div>
        {{/if}}

      </form>

    </div>

    <br />

    <div class="mb-3">
      <label class="form-check-label">Not registered yet? click here</label>
      <a href="/signup"> <button class="btn btn-primary">signup</button></a>
    </div>
  </div>

</div>
