<div class="cardJobContainer">
  <h3>List Job</h3>

  {{#if this.errorMessage2}}
    <div class="alert alert-danger" role="alert">
      {{this.errorMessage2}}
    </div>
  {{/if}}

  {{#each ownerJobs}}

    <div class="cardJob">
      <div>
        <h3><b>{{this.city}} - {{this.startDate}} - {{this.price}}â‚¬</b></h3>
      </div>

      <div class="subCardBody">
        <div>
          <p><b>Pets:</b></p>
          {{#each this.pet}}

            <p>{{this.name}} - {{this.animalType}}</p>

          {{/each}}
        </div>
        <div>
          <p>Start Date: <b>{{this.startDate}}</b></p>
          <p>End Date: <b>{{this.endDate}}</b></p>
        </div>

        <div>
          <p>Status: <b>{{this.status}}</b></p>
          <p>Comment: <b>{{this.comment}}</b></p>

          <p>Sittr: <b>{{this.sittr.username}}</b></p>
        </div>
        {{#if this.isSelected}}
        <div class="ownerJobListButtons">
          <a href="/owner/edit-job/{{this._id}}">
            <button class="btn btn-primary">Modify Job</button></a>
          <a href="/owner/delete-job/{{this._id}}"><button
              class="btn btn-danger"
            > Delete Job</button></a>
        </div>
        {{/if}}
      </div>

    </div>

  {{/each}}

</div>