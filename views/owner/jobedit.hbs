<div class="PetJobContainer">
  <h3>Modify this Job </h3>

  <div class="formPetJobContainer">

    <form action="/owner/edit-job/{{jobToEdit._id}}" method="post">
      <div class="mb-3">
        <label for="pet">Choose your pets:</label>
        <select class="form-select" name="pet" multiple>

          {{#each ownerPets}}


{{#if this.isSelected}}
            <option value="{{this._id}}" selected>{{this.name}}</option>

{{else}}

<option value="{{this._id}}">{{this.name}}</option>

{{/if}}


          {{/each}}
        </select>

      </div>

      <div class="mb-3">
        <label for="city">city:</label>
        <input
          class="form-control"
          type="text"
          name="city"
          value="{{jobToEdit.city}}"
        />

      </div>

      <div class="mb-3">
        <label for="price">price:</label>
        <input
          class="form-control"
          type="number"
          name="price"
          step="0.01"
          min="0"
          value="{{jobToEdit.price}}"
        />

      </div>

      <div class="mb-3">
        <label for="startDate">Start date:</label>
        <input
          class="form-control"
          type="date"
          name="startDate"
          value="{{startDateForHTML}}"
        />

      </div>

      <div class="mb-3">
        <label for="endDate">End date:</label>
        <input
          class="form-control"
          type="date"
          name="endDate"
          value="{{endDateForHTML}}"
        />

      </div>

      <div class="mb-3">
        <label for="comment">comment</label>
        <textarea
          name="comment"
          rows="5"
          cols="50"
          class="form-control"
          placeholder="Leave a comment here"
        >{{jobToEdit.comment}}</textarea>

      </div>
      <div class="formPetJobContainerButtons">

        <button class="btn btn-primary">Update</button>

        <a href="/owner/joblist"><button
            class="btn btn-outline-info"
          >Cancel</button></a>
      </div>
      {{#if this.errorMessage}}
        <div class="alert alert-danger" role="alert">
          {{this.errorMessage}}
        </div>
      {{/if}}
    </form>
  </div>
</div>